# ------------------------------------------------------------------------------
# Generic alias 
alias p="pwd"
alias ls="ls --color" 
alias l=ls
alias ll="ls -al"
alias lt="ls -ltr"
alias rm="rm -i"
alias rf="rm -rf"
alias h="htop -u nobody"
alias pdf="evince"
alias t="tmux new-session \; split-window -v \; split-window -h \; attach"
# -----------------------------------------------------------------------------
# Git alias
alias commit="git commit"
alias add="git add"
alias status="git status"
alias push="git push"
alias pull="git pull"
alias merge="git merge"
alias checkout="git checkout"
alias remove="git rm"
alias move="git mv"
# ------------------------------------------------------------------------------
# R alias
alias r="rtichoke"
