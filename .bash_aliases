# ------------------------------------------------------------------------------
# Generic alias 
alias p="pwd"
alias ls="ls --color" 
alias l=ls
alias ll="ls -al"
alias lt="ls -ltr"
alias rm="rm -i"
alias rf="rm -rf"
alias h="htop -u nobody"
alias pdf="evince"
alias t="tmux new-session \; split-window -v \; split-window -h \; attach"
alias grepi="grep -i"
alias grepi3="grep -i -A3"
